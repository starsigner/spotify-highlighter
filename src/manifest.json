{
    "name": "Spotify Text-to-Playlist",
    "description": "Searches the highlighted text on Spotify and adds song to playlist.",
    "version": "0.1.0",
    "manifest_version": 2,
    "icons": {
        "16": "./icon16.png",
        "19": "./icon19.png",
        "48": "./icon48.png",
        "128": "./icon128.png"
    },
    "background": {
        "scripts": [
            "./jquery-3.6.0.min.js",
            "./background.js",
            "./main.js"
        ],
        "pages": [
            "./background.html"
        ]
    },
    "options_page": "./options.html",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "identity",
        "contextMenus",
        "tabs",
        "https://api.spotify.com/*"
    ]
}
